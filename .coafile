[spacing]
bears = SpaceConsistencyBear
files = **.cpp, **.cmake
use_spaces = true
default_actions = *: ApplyPatchAction
no_orig = True

[git]
bears = GitCommitBear

[Markdown]
files = **.md
bears = MarkdownBear, AlexBear
ignore = **/ForwardDeclarations.md
default_actions = *: ApplyPatchAction
no_orig = True

[CMake]
files = **/CMakeLists.txt, **.cmake
bears = CMakeLintBear
ignore = *build*/**, external/**

[cpp]
enable = all
files = **/*.cpp
bears = CPPCheckBear

[filename]
files =src/**.cpp
bears = FilenameBear
file_naming_convention = pascal
default_actions = *: ApplyPatchAction
no_orig = True

[Json]
files = **.json
bears = JSONFormatBear

[line_count]
files = **.cpp
bears = LineCountBear
max_lines_per_file = 2000

[Shell]
bears = ShellCheckBear
files = **.sh
shell = bash
